itcl::class WpWin {
  inherit PointWin

  constructor {args} {
    PointWin::constructor {*}$args -PointKind "watch"                   \
      -MenuBar [expr {[pref getd gdb/wp/menu] == ""}]} {
    set watch_entry(0) ""
    toggle_threads
    if {![gdb_have_masked_watchpoints]} {
      hide_column mask
    }
  }

  public {
    method store {}
    method toggle_threads {}
    method goto {r}
    method set_type {n}

    # GDB Events
    method watchpoint {event}
  }

  private {
    variable watch_type
    variable watch_entry

    method local_menu {m}
    method global_menu {m}
    method update_local_menu {m n args}
    method header {}
    method change {event n {color yellow}}
    method add {event}
    method delete_point {event}
    method get_point_list {}
  }
}

# Load methods.
source "[file rootname [info script]].itb"
